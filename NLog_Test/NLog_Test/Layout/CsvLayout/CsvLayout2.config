<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">

  <!-- optional, add some variables
  https://github.com/nlog/NLog/wiki/Configuration-file#variables
  -->
  <variable name="myvar" value="myvalue"/>

  <!--
  See https://github.com/NLog/NLog/wiki/CsvLayout
  for information on customizing logging rules and outputs.
   -->
  <targets>
    <target xsi:type="File" name="debug1" fileName="..\..\Layout\log.csv">
      <layout xsi:type="CsvLayout" delimiter="Tab" withHeader="false">
        <column name="time" layout="${longdate}" quoting="Auto" />
        <column name="level" layout="${level:upperCase=true}" quoting="Auto"/>
        <column name="message" layout="${message}" quoting="All" />
        <column name="exception" layout="${exception:format=ToString}" quoting="All"/>
        <column name="property1" layout="${event-properties:property1}"/>
      </layout>
    </target>
  </targets>

  <rules>
    <logger name="*" level="Debug" writeTo="debug1" />
  </rules>
</nlog>
